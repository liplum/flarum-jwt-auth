{
    "name": "liplum/flarum-jwt-auth",
    "description": "Stateless login for Flarum through JWT cookie",
    "keywords": [
        "flarum",
        "jwt",
        "firebase"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "flarum/core": "^1.2",
        "firebase/php-jwt": "^6.0",
        "guzzlehttp/guzzle": "^7.0",
        "ext-json": "*"
    },
    "authors": [
        {
            "name": "Liplum",
            "homepage": "https://liplum.net/",
            "email": "Li_plum@outlook.com",
            "role": "Developer"
        }
    ],
    "support": {
        "source": "https://github.com/liplum/flarum-jwt-auth"
    },
    "autoload": {
        "psr-4": {
            "Liplum\\JWTAuth\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "JWT Cookie Login",
            "category": "feature",
            "icon": {
                "name": "fas fa-cookie",
                "backgroundColor": "#684ba6",
                "color": "#fff"
            }
        }
    }
}
