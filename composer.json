{
  "name": "liplum/flarum-jwt-auth",
  "description": "Authentication based on JSON Web Token (JWT) token through HTTP request cookie.",
  "version": "0.1",
  "keywords": [
    "flarum",
    "flarum-extension",
    "flarum-ext",
    "jwt"
  ],
  "type": "flarum-extension",
  "license": "MIT",
  "require": {
    "flarum/core": "^1.2",
    "firebase/php-jwt": "^6.0",
    "guzzlehttp/guzzle": "^7.0",
    "ext-json": "*"
  },
  "authors": [
    {
      "name": "Liplum",
      "homepage": "https://liplum.net/",
      "email": "Li_plum@outlook.com",
      "role": "Developer"
    }
  ],
  "support": {
    "source": "https://github.com/liplum/flarum-jwt-auth"
  },
  "autoload": {
    "psr-4": {
      "Liplum\\JWTAuth\\": "src/"
    }
  },
  "extra": {
    "flarum-extension": {
      "title": "JWT Auth",
      "category": "authentication",
      "icon": {
        "name": "fas fa-cookie",
        "backgroundColor": "#7b0004",
        "color": "#fff"
      }
    }
  }
}
